.create-musique-container.main-create-container
  h2.title.fond-village Nouvelle musique
  .form-container
    .field
      .label Titre
      input.form(placeholder="Le titre de votre création" ng-model="post.title")
    .field
      .label Miniature
      input.form.upload(placeholder="(optionnel) coller ici le lien de votre miniature" ng-model="post.miniature")
      media-select-button(type="image" field="post.miniature")
    .field
        .label Musique
        input.form.upload(placeholder="Coller ici le lien de votre musique. (.mp3 seulement" ng-model="post.musique")
        media-select-button(type="musique" field="post.musique")
    .editor(text-angular ng-model="post.content" ta-toolbar="[['h1', 'h2', 'h3', 'p', 'bold', 'italics', 'underline', 'strikeThrough', 'ul', 'ol', 'redo', 'undo', 'clear'], ['justifyLeft', 'justifyCenter', 'justifyRight', 'html', 'insertImage','insertLink']]")
    .authors-container(new-post-authors  authors="post.authors")
    new-post-personnages.authors-container(personnages-lies="post.personnagesLies")
    .common-info
      .status( ng-click="switchStatus()")
        div
          span( ng-class="{'active fond-village':post.status == 'publish'}") Publié
          span( ng-class="{'active fond-village':post.status == 'draft'}") Brouillon
      .location-container(new-post-location)
    .validate.fond-village.hover( ng-click="sendPost()") Valider

