.create-video-container.main-create-container()
  h2.title.fond-village Nouvelle video
  .form-container
    .field
      .label Titre
      input.form(type="text" placeholder="Le titre de votre création" ng-model="post.title")
    .field
      .label Miniature
      input.form.upload(type="text" placeholder="(optionnel) coller ici le lien de votre miniature" ng-model="post.miniature")
      media-select-button(type="image" field="post.miniature")
    .field
      .label Vidéo
      input.form.upload(type="text" placeholder="Coller ici le lien direct de votre vidéo (.mp4 seulement)" ng-model="post.video")
      media-select-button(type="video" field="post.video")
    .editor(text-angular ng-model="post.description" ta-toolbar="[['h1', 'h2', 'h3', 'p', 'bold', 'italics', 'underline', 'strikeThrough', 'ul', 'ol', 'redo', 'undo', 'clear'], ['justifyLeft', 'justifyCenter', 'justifyRight', 'html', 'insertImage','insertLink']]")
    .authors-container(new-post-authors  authors="post.authors")
    new-post-personnages.authors-container(personnages-lies="post.personnagesLies")
    .common-info
      .status( ng-click="switchStatus()")
        div
          span( ng-class="{'active fond-village':post.status == 'publish'}") Publié
          span( ng-class="{'active fond-village':post.status == 'draft'}") Brouillon
      .location-container(new-post-location)
    .validate.fond-village(ng-click="sendPost()") Valider
